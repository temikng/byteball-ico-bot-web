extends ./hidden/common-layout

append init
	- title += "Statistics";
	- nCurrNavLink = 2;

append metas
	meta(name="keywords" content="Byteball")

append links
	link(rel="stylesheet" href="/assets/css/libs/bootstrap-datepicker.min.css")
	link(rel="stylesheet" href="/assets/css/table.css")
	link(rel="stylesheet" href="/assets/css/statistics.css")

append content-main

	form
		fieldset Filters:
			.row
				.col
					.form-group
						label(for='t_f_curr') currency
						select#t_f_curr.form-control(name="f_curr", onchange="table.actions.onChangeFilter(this)")
							option all
							option GBYTE
							option BTC
							option ETH
							option USDT
				.col
					.form-group
						label(for='t_f_df') date from
						input#t_f_df.form-control(type="text", name="df", placeholder="MM/DD/YYYY")
				.col
					.form-group
						label(for='t_f_dt') date to
						input#t_f_dt.form-control(type="text", name="dt", placeholder="MM/DD/YYYY")

	table.table.table-sm.table-bordered.table-custom
		thead#thead
		tbody#tbody

append scripts
	script(src="/assets/js/libs/moment.min.js")
	script(src="/assets/js/libs/bootstrap-datepicker.min.js")
	script(src="/assets/js/table.js")
	script(src="/assets/js/statistics.js")